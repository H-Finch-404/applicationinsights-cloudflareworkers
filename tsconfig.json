{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"declaration": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["esnext", "webworker"],
		"sourceMap": true,
		"alwaysStrict": true,
		"allowJs": true,
		"checkJs": true
	},
	"exclude": [
		"node_modules",
		"dist",
	],
}
